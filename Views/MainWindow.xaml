<Window x:Class="WindowsSystemWidget.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="System Monitor"
        Width="320"
        Height="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize">

    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="12" 
            BorderBrush="#3D3D3D" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tray Icon -->
            <tb:TaskbarIcon x:Name="TrayIcon"
                            ToolTipText="System Monitor"
                            TrayLeftMouseDown="TrayIcon_TrayLeftMouseDown">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Apri" Click="OpenMenuItem_Click"/>
                        <Separator/>
                        <MenuItem Header="Esci" Click="ExitMenuItem_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>

            <!-- Header -->
            <Border Grid.Row="0" Padding="16" BorderBrush="#3D3D3D" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ’»" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="System Monitor" 
                               Foreground="{StaticResource TextBrush}"
                               FontWeight="SemiBold" FontSize="14" 
                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                    <Button Grid.Column="2" Content="âŸ³" 
                            Click="RefreshButton_Click"
                            Background="Transparent" 
                            Foreground="{StaticResource SecondaryTextBrush}"
                            BorderThickness="0" FontSize="16" Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16">
                    
                    <!-- Memory Section -->
                    <TextBlock Text="Memoria RAM" Foreground="{StaticResource TextBrush}" 
                               FontWeight="SemiBold" FontSize="13" Margin="0,0,0,8"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="12">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="MemoryUsedText" Text="0 GB / 0 GB" 
                                           Foreground="{StaticResource TextBrush}" FontSize="12"/>
                                <TextBlock x:Name="MemoryPercentText" Grid.Column="1" Text="0%" 
                                           Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar x:Name="MemoryProgressBar" Height="8" Margin="0,8,0,0"
                                         Background="#404040" Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock x:Name="MemoryStatusText" Text="Stato: OK" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       FontSize="11" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Disk Section -->
                    <TextBlock Text="Disco" Foreground="{StaticResource TextBrush}" 
                               FontWeight="SemiBold" FontSize="13" Margin="0,16,0,8"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="12">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="DiskUsedText" Text="0 GB / 0 GB" 
                                           Foreground="{StaticResource TextBrush}" FontSize="12"/>
                                <TextBlock x:Name="DiskPercentText" Grid.Column="1" Text="0%" 
                                           Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar x:Name="DiskProgressBar" Height="8" Margin="0,8,0,0"
                                         Background="#404040" Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock x:Name="DiskFreeText" Text="Libero: 0 GB" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       FontSize="11" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Actions Section -->
                    <TextBlock Text="Azioni" Foreground="{StaticResource TextBrush}" 
                               FontWeight="SemiBold" FontSize="13" Margin="0,16,0,8"/>
                    
                    <WrapPanel>
                        <Button Content="ðŸ§¹ Libera RAM" Click="FreeMemoryButton_Click"
                                Background="#1A5856D6" Foreground="{StaticResource PrimaryBrush}"
                                BorderThickness="0" Padding="12,8" Margin="0,0,8,8" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Content="ðŸ“Š Task Manager" Click="TaskManagerButton_Click"
                                Background="#1A34C759" Foreground="{StaticResource SuccessBrush}"
                                BorderThickness="0" Padding="12,8" Margin="0,0,8,8" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </WrapPanel>
                    
                    <Button Content="âš ï¸ Chiudi App Pesanti" Click="KillHeavyButton_Click"
                            Background="#1AFF9500" Foreground="{StaticResource WarningBrush}"
                            BorderThickness="0" Padding="12,8" Margin="0,0,0,8" Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Process List -->
                    <TextBlock Text="Processi (Top 5)" Foreground="{StaticResource TextBrush}" 
                               FontWeight="SemiBold" FontSize="13" Margin="0,8,0,8"/>
                    
                    <ItemsControl x:Name="ProcessList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                        CornerRadius="6" Padding="10" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="{StaticResource TextBrush}" 
                                                       FontSize="12" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding MemoryFormatted}" 
                                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                                       FontSize="10"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="âœ•" 
                                                Click="KillProcessButton_Click"
                                                Tag="{Binding}"
                                                Background="Transparent" 
                                                Foreground="{StaticResource DangerBrush}"
                                                BorderThickness="0" FontSize="12" Cursor="Hand"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Padding="16,10" BorderBrush="#3D3D3D" BorderThickness="0,1,0,0"
                    Background="{StaticResource SurfaceBrush}">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Aggiornato: ora" 
                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                   FontSize="10" VerticalAlignment="Center"/>
                        <Button Content="Esci" Click="ExitButton_Click"
                                HorizontalAlignment="Right"
                                Background="Transparent" 
                                Foreground="{StaticResource SecondaryTextBrush}"
                                BorderThickness="0" FontSize="11" Cursor="Hand"/>
                    </Grid>
                    <TextBlock Text="Creato da Simone Castiglia" 
                               Foreground="#5A5A5E" FontSize="9" 
                               HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

